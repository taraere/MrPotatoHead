<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:onClick="viewClicked"
              android:backgroundTint="@color/colorPrimaryDark"
              android:weightSum="7"
              tools:context="com.elzen.tara.mrpotatohead.MrPotatoActivity" android:orientation="vertical">

    <!--TODO: add background colour-->
    <!--TODO: center heading-->

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/body"/>

        <ImageView
                android:id="@+id/ears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ears"/>

        <ImageView
                android:id="@+id/arms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/arms"/>

        <ImageView
                android:id="@+id/eyebrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyebrows"/>

        <ImageView
                android:id="@+id/eyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/eyes"/>

        <ImageView
                android:id="@+id/hat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/hat"/>

        <ImageView
                android:id="@+id/nose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/nose"/>

        <ImageView
                android:id="@+id/shoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/shoes"/>

        <ImageView
                android:id="@+id/mustache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/mustache"/>

        <ImageView
                android:id="@+id/mouth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mouth"/>

        <ImageView
                android:id="@+id/glasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/glasses"/>

        <TextView
                android:text="Click on the check-boxes to put on or take off different parts of Mr Potato Head."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="cursive"
                android:includeFontPadding="true"
                android:id="@+id/textView"/>

    </FrameLayout>

    <!--<LinearLayout android:layout_width="match_parent"-->
                  <!--android:weightSum="7"-->
                  <!--android:layout_height="match_parent">-->

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="5"
                android:layout_weight="7"
                android:layout_gravity="center_horizontal">

            <!--TODO: constrain within screen-->

            <CheckBox
                    android:id="@+id/checkboxEyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:onClick="checkboxClicked"
                    android:text="@string/checkboxEyes"/>

            <CheckBox
            android:id="@+id/checkboxEars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxEars"/>

            <CheckBox
            android:id="@+id/checkboxEyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxEyebrows"/>

            <CheckBox
            android:id="@+id/checkboxGlasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxGlasses"/>

            <CheckBox
            android:id="@+id/checkboxArms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxArms"/>

            <CheckBox
            android:id="@+id/checkboxHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxHat"/>

            <CheckBox
            android:id="@+id/checkboxMustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxMustache"/>

            <CheckBox
            android:id="@+id/checkboxNose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxNose"/>

            <CheckBox
            android:id="@+id/checkboxShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkboxClicked"
            android:text="@string/checkboxShoes"/>
            <CheckBox
                    android:id="@+id/checkboxMouth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="checkboxClicked"
                    android:text="@string/checkboxMouth"/>

        </GridLayout>
    <!--</LinearLayout>-->


</LinearLayout>
