<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:onClick="viewClicked"
              android:weightSum="7"
              tools:context="com.elzen.tara.mrpotatohead.MrPotatoActivity" android:orientation="vertical">

    <!--TODO: add background colour-->
    <!--TODO: center heading-->

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/body"/>

        <ImageView
                android:id="@+id/ears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ears"/>

        <ImageView
                android:id="@+id/arms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/arms"/>

        <ImageView
                android:id="@+id/eyebrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyebrows"/>

        <ImageView
                android:id="@+id/eyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:srcCompat="@drawable/eyes"/>

        <ImageView
                android:id="@+id/hat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/hat"/>

        <ImageView
                android:id="@+id/nose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/nose"/>

        <ImageView
                android:id="@+id/shoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/shoes"/>

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/mouth"/>

        <ImageView
                android:id="@+id/mustache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mustache"/>

        <ImageView
                android:id="@+id/glasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/glasses"/>

        <TextView
                android:text="@string/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:fontFamily="cursive"
                android:includeFontPadding="true"
                android:id="@+id/textView"/>

    </FrameLayout>

    <!--<LinearLayout android:layout_width="match_parent"-->
                  <!--android:weightSum="7"-->
                  <!--android:layout_height="match_parent">-->

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="5"
                android:layout_weight="7"
                android:layout_gravity="center_horizontal">

            <!--TODO: constrain within screen-->

        </GridLayout>
    <!--</LinearLayout>-->


</LinearLayout>
